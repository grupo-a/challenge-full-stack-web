{
  "openapi": "3.0.1",
  "info": {
    "title": "Challenge Full Stack Web",
    "description": "Documentation from api",
    "version": "1.0.0"
  },
  "basePath": "/",

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },

  "paths": {
    "/login": {
      "post": {
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "user@mail.com",
                  "password": "******"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Missing Email or Password"
          }
        }
      }
    },

    "/students": {
      "get": {
        "tags": ["Students"],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Server Error"
          }
        }
      }
    },

    "/student/name/:nome": {
      "get": {
        "tags": ["Students"],
        "parameters": [
          {
            "in": "path",
            "name": "nome",
            "required": true,
            "schema":{
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },

    "/student/ra/:ra": {
      "get": {
        "tags": ["Students"],
        "parameters": [
          {
            "in": "path",
            "name": "ra",
            "required": true,
            "schema":{
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": ["Students"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "in": "path",
            "name": "ra",
            "required": true,
            "schema":{
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "All data must be filled"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },

    "/student": {
      "post": {
        "tags": ["Students"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "ra": {
                    "type": "number"
                  },
                  "cpf": {
                    "type": "string"
                  }
                },
                "example": {
                  "nome": "any_nome",
                  "email": "any_email",
                  "ra": 1,
                  "cpf": "any_cpf"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "All data must be filled"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      },
      "patch": {
        "tags": ["Students"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "nome": "any_nome",
                  "email": "any_email"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "All data must be filled"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}
